{
    "manifest_version": 2,

    "name": "Immutable Pinned Tabs",
    "description": "This extension will lock the page a pinned tab is on.",
    "version": "1.0",

    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": "icon16.png"
    },

    "background": {
        "scripts": ["immutableTabs.js"],
        "persistent": true
    },

    "permissions": [
      "tabs",
      "webNavigation",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ]
}
