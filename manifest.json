{
    "manifest_version": 2,

    "name": "Immutable Pinned Tabs",
    "description": "An extension that will make your pinned tabs immutable. Once you pin a tab, you can no longer navigate away from the page it is on!",
    "version": "1.0.2",

    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    "browser_action": {
        "default_icon": "icons/icon16.png"
    },

    "background": {
        "scripts": ["immutableTabs.js"],
        "persistent": true
    },

    "permissions": [
      "tabs",
      "webNavigation",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ]
}
